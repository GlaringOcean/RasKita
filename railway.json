{
  "$schema": "https://railway.app/railway.schema.json",

  "build": {
    "builder": "NIXPACKS",
    "watchPaths": ["Backend/best_model.pth"],
    "nixpacksConfig": {
      "phases": {
        "install": {
          "cmds": [
            "pip install --upgrade pip",
            "pip install -r Backend/requirement.txt"
          ]
        }
      }
    }
  },

  "deploy": {
    "startCommand": "uvicorn Backend.main:app --host 0.0.0.0 --port $PORT"
  }
}
